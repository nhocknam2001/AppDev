<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    {{!--
    <link rel="stylesheet" href="footer.css"> --}}
    <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="mystyle.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/ad9d9b1f44.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">


    {{!-- SLIDER --}}
    <link rel="stylesheet" href="./css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Index</title>
</head>

<body>
    {{> headerUser}}

    <div>
        {{!-- IMAGE SLIDER --}}
        <div class="container" style="width: 700px">
            <div id="mycarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="1"></li>
                    <li data-target="#mycarousel" data-slide-to="2"></li>
                    <li data-target="#mycarousel" data-slide-to="3"></li>
                    <li data-target="#mycarousel" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner" style="max-width:200px; position: relative; margin: auto">
                    <div class="carousel-item active">
                        <img style="width: 100%;" src="Slide1.jpg" alt="ImageIndex">

                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%;" src="Slide2.jpg" alt="ImageIndex">
                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%;" src="Slide3.jpg" alt="ImageIndex">
                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%;" src="Slide4.jpg" alt="ImageIndex">
                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%;" src="Slide5.jpg" alt="ImageIndex">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev" style="">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>

                <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next"
                    style="cursor:pointer" ;>

                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next"
                        style="cursor:pointer">


                        <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next"
                            style="cursor:pointer">

                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <script>$('.carousel').carousel({
                                interval: 10
                            })</script>
            </div>

        </div>
        <br><br><br><br>
        <div>
            <div>
                <center>
                    <h2 style="font-weight: bold; color:orangered ">Hot book, best seller</h2>
                    <br>
                    <center>
                        <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off"
                            onclick="Redirect2();">
                            See All Product
                        </button>
                    </center>
                </center>

            </div>
            <br><br>
            <div>
                <div class="product">
                    <!-- <h3>Class</h3> -->
                    <ul>
                        {{#each books}}
                        <li style="display: inline-block; margin: 40px 80px" class="Display_product">
                            <a href="/user/proDetail?id={{_id}}" style="text-decoration: none;" id="name">
                                <div>
                                    <img src='{{imgURL}}' width="180" height="180">
                                    <div>
                                        <center>
                                            <div class="stars" style="color: #ff9f1a;">
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>

                                            </div>
                                        </center>
                                        <center>{{name}}</center>
                                    </div>
                                    <center>
                                        {{price}} VND
                                    </center>

                                </div>
                            </a>
                        </li> {{/each}}

                    </ul>
                </div>
            </div>

            <br><br>

        </div>
        <div>
            <div>

                <center>
                    <div style="position: relative;">
                        <div id="contact1" style="font-weight: bold; font-size:40px; color: rgb(4, 0, 255)">FPT Book
                        </div>
                        <div id="contact2" style="color: white; font-weight: bold; font-size:20px">Update information
                            about new products</div>
                        <img src="backgroundImage.jpg" alt="" style="width: 70%; height: 420px">
                        <a id="contact3" href="#">Facebook</a>
                        <a id="contact4" href="#">Instagram</a>

                    </div>

                </center>

            </div>
        </div>
        <br><br><br>

        <div>
            <div>

                <center>
                    <div style="position: relative;">
                        <div style="font-weight: bold; font-size:40px; color: rgb(4, 0, 255)">Awesome Feedback</div>
                        <br>
                        <div>
                            <table class="table table-success table-striped" style="width: 80%;">
                                <thead>
                                    <tr>
                                       
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Feedback</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each feedbacks}}
                                    <tr>
                                       
                                        <td>{{nameCustomer}}</td>
                                        <td>{{emailCustomer}}</td>
                                        <td>{{feedback}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>

                    </div>

                </center>

            </div>
        </div>
        <br><br><br>
</body>
{{> footer}}
<script>
    function Redirect2() {
        window.location.href = "/user/product"
    }
</script>

