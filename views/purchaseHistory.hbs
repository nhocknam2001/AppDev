    <title>Category</title>
</head>

<body>
    {{> headerUser}}

    <div>
        <div>
            <br><br>
            <center>

            </center>
        </div>

        <div>
            <br><br>
            <table class="table table-hover table-bordered">
                <thead style="background-color: yellow; color:black">
                    <tr class="table-primary">

                        <th scope="col">IdOrder</th>
                        <th scope="col">Date</th>
                        <th scope="col">Total Price</th>
                        <th scope="col">Status order</th>
                        <th scope="col">Options</th>


                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr>
                        <td class="items"><a href="#">{{_id}}</a></td>
                        <td class="items">{{date}}</td>
                        <td class="items">{{totalBill}} VND</td>
                        <td class="items">{{statusOrder}}</td>
                        
                        <td>
                            <a href="/user/feedback?fb={{_id}}" class="btn btn-info btn-sm">
                                Feedback
                            </a>
                            <a onclick="return confirm('Do you want to cancel order?')"
                                href="/user/cancel?id={{_id}}" class="btn btn-info btn-sm">
                                Cancel order
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    

    <br><br><br><br><br><br><br><br><br><br><br>
</body>
{{> footer}}
