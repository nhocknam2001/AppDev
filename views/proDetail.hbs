<!DOCTYPE html>
<html lang="en">

<head>


    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>eCommerce Product Detail</title>
    {{!--
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"> --}}
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
    <link rel="stylesheet" href="proDetail.css">



</head>

<script src="./src/bootstrap-input-spinner.js"></script>
<script>
    $("input[type='number']").inputSpinner()
</script>

<body>
    {{> header}}

    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">

                        <div class="preview-pic tab-content">

                            <div class="tab-pane active" id="pic-1"><img src="{{product.imgURL}}" /></div>
                            
                            
                        </div>
                       

                    </div>
                    <div class="details col-md-6">
                        <h3 class="product-title">{{product.name}}</h3>
                        <p class="product-description"> <span style="font-weight: bold;">Category: </span>{{categoryProduct.name}}</p>
                        <p class="product-description"> <span style="font-weight: bold;">Description: </span>{{product.description}}</p>
                        <h4 class="price">current price: <span>{{product.price}} VND</span></h4>
                        <div class="action">
                            <form action="shoppingCart" method="post">
                                <input type="number" value="1" min="1" max="1000" step="1" name="quantity">
                                <input type="hidden" name="idProduct" value="{{product._id}}">

                                <button class="add-to-cart btn btn-default" type="submit"
                                    style="background-color: aquamarine;">add to cart</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> footer}}
</body>

</html>