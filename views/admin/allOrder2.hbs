                            </ul><!-- /.left_sidebar_second_level -->
                        </li>

                    </ul><!-- /.left_sidebar_first_level -->
                </div><!-- /.left_sidebar_box -->

            </div><!-- /.left_sidebar -->
            <div id="content_area">
                <div id="products_box">
                    <div class="wrapper">
                        <nav>
                            <ul>
                                <li><a href="/admin/feedbacks"><i class="fas fa-reply" aria-hidden="true"></i></a></li>
                                <li><a href=""><i class="fas fa-eye" aria-hidden="true"></i></a></li>
                                <li><a href=""><i class="fas fa-eye-slash" aria-hidden="true"></i></a></li>
                                <li><a href="/admin/infor"><i class="fa fa-location-arrow" aria-hidden="true"></i></a>
                                </li>
                            </ul>
                        </nav>
                        <br>
                        <!--Kết Thúc Navigation -->
                        <div class="scrollbar" id="style-1">
                            <div class="force-overflow">
                                <div class="table">
                                    <div class="row header green">
                                        <div class="cell">
                                            ID Order
                                        </div>
                                        <div class="cell">
                                            Date
                                        </div>
                                        <div class="cell">
                                            Total Price
                                        </div>
                                        <div class="cell">
                                            Status
                                        </div>
                                    </div>
                                    {{#each allorders}}
                                    <div class="row">
                                        <div class="cell" data-title="ID">
                                            <a href="/admin/idOrder2?id={{_id}}"
                                                style="text-decoration: none; font-size: 18px">{{_id}}</a>
                                        </div>
                                        <div class="cell" data-title="Date Sold">
                                            {{date}}
                                        </div>
                                        <div class="cell" data-title="Total Price">
                                            {{totalBill}}
                                        </div>
                                        <div class="cell" data-title="Status">
                                            {{statusOrder}}
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /#products_box -->
            </div><!-- /#content_area -->
        </div><!--body container-->
