                            </li>

                        </ul><!-- /.left_sidebar_first_level -->
                    </div><!-- /.left_sidebar_box -->

                </div><!-- /.left_sidebar -->
                <div id="content_area">
                    <div id="products_box">
                        <div class="wrapper">
                            <nav>
                                <ul>
                                    <li><a href="/admin/allOrder2?email={{order.email}}"><i class="fas fa-reply" aria-hidden="true"></i></a>
                                    </li>
                                    <li><a href=""><i class="fas fa-eye" aria-hidden="true"></i></a></li>
                                    <li><a href=""><i class="fas fa-eye-slash" aria-hidden="true"></i></a></li>
                                    <li><a href="/admin/infor"><i class="fa fa-location-arrow"
                                                aria-hidden="true"></i></a></li>
                                </ul>
                            </nav>
                            <br>
                            <!--Kết Thúc Navigation -->
                            <div class="table">
                                <div class="row header green">
                                    <div class="cell">
                                        Product
                                    </div>
                                    <div class="cell">
                                        Name
                                    </div>
                                    <div class="cell">
                                        Price
                                    </div>
                                    <div class="cell">
                                        Quantity
                                    </div>
                                    <div class="cell">
                                        Date
                                    </div>
                                    <div class="cell">
                                        Total Price
                                    </div>
                                    <div class="cell">
                                        Status
                                    </div>
                                </div>
                                {{#each books}}
                                <div class="row">
                                    <div class="cell" data-title="Product">
                                        <img src={{productId.imgURL}} style="width: 100px; height: 150px">
                                    </div>
                                    <div class="cell" data-title="Name">
                                        {{productId.name}}
                                    </div>
                                    <div class="cell" data-title="Price">
                                        {{productId.price}}
                                    </div>
                                    <div class="cell" data-title="Quantity">
                                        {{quantity}}
                                    </div>

                                    <div class="cell" data-title="Date Sold">
                                        {{date}}
                                    </div>
                                    <div class="cell" data-title="Price">
                                        {{price}}
                                    </div>
                                    <div class="cell" data-title="Status">
                                        {{statusOrder}}
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div><!-- /#products_box -->
                    <div>
                        <h1 style="font-weight:bold; font-size: 20px; margin-left: 800px; margin-bottom: 0px ">
                            <i>Total Bill: {{totalBill}}</i>
                        </h1>
                    </div>
                </div><!-- /#content_area -->
            </div>
